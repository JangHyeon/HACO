<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 구현하고자하는 인터페이스 풀경로 -->
<mapper namespace="kr.co.haco.DAO.AccountDAO">
	<!-- id명은 인터페이스가 구현하는 메서드명 -->
	<!-- resultType은 랩퍼클래스 타입 -->
	<select id="getSubjectList" parameterType="Integer"
		resultType="kr.co.haco.VO.Subject">
		select
		subject_id,subject_name,lecture_totalday,lecture_totaltime,lecture_time,
		lecture_target,capacity,tuition_fee from subject
		<where>
			<if test="subject_id != null"> subject_id=#{param1}</if>
		</where>
	</select>


	<select id="getRoleList" resultType="kr.co.haco.VO.Roles">
		select role_name, role_desc,
		create_date from roles
	</select>

	<select id="getEmployee" parameterType="Integer" resultType="kr.co.haco.VO.Employee">
		select * from employee where account_id=#{param1}
	</select>


<!-- 과목등록  -->
	<insert id="insertSubject" parameterType="kr.co.haco.VO.Subject">
		insert into
		subject(subject_name,capacity,subject_explanation,instructional_objectives,subject_point,
		lecture_target,lecture_totalday,lecture_totaltime,lecture_time,tuition_fee,lecture_content,center_id)
		VALUES(#{subject_name},#{capacity},#{subject_explanation},#{instructional_objectives},#{subject_point},
		#{lecture_target},#{lecture_totalday},#{lecture_totaltime},#{lecture_time},#{tuition_fee},#{lecture_content},#{center_id}
		)
	</insert>
	<!--과목목록  -->
	<select id="getSubjectList" 
		resultType="kr.co.haco.VO.Subject">
		select
		subject_id,subject_name,lecture_totalday,lecture_totaltime,lecture_time,
		lecture_target,capacity,tuition_fee from subject
		
	</select>
	
<!--과목상세보기  -->
	<select id="getSubjectList2" parameterType="Integer"
		resultType="kr.co.haco.VO.Subject">
		select
		subject_id,subject_name,lecture_totalday,lecture_totaltime,lecture_time,
		lecture_target,capacity,tuition_fee from subject
		where subject_id=#{param1}
	</select>














</mapper>